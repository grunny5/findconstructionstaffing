{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "scripts/**/*",
    "scripts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__/**/*",
    "jest.config.js",
    "jest.setup.js",
    "jest.setup.test-env.js"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ]
}
